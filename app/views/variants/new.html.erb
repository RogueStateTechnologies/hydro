<div class="card" style="width:40%;">
  <div class="card-header">
    <h5 class="card-title">Variety is the spice of life<h5>
  </div>
  <div class="card-body">
    <%= bootstrap_form_for @variant do |f| %>
      <%= f.collection_select :crop_id, Crop.order(:name), :id, :name %><br>
      <%= f.text_field :name, placeholder: "Variant" %><br>
      <%= f.text_area :description, placeholder: "Enter Description Here..." %><br>
      <%= button_to "Add Variant", {}, {:class=>"btn btn-primary"} %>
    <% end %>
  </div>
</div>