<%= bootstrap_form_for [@plant, @report] do |f| %>
<div class="card">
  <div class="card-header">
    <h4 class="card-title">How is the plant doing?</h4>
  </div>
  <div class="card-body" style="display:flex;justify-content:space-around;">
    <div>
      <%= f.number_field :height_in_centimeters, placeholder: "100" %><br>
      <%= f.number_field :light_schedule, placeholder: "24" %><br>
      <button class="btn btn-info">Add a picture</button>
    </div>
    <div>
      <%= f.number_field :air_humidity, placeholder: "95" %><br>
      <%= f.number_field :day_air_temp, placeholder: "75"%><br>
      <%= f.number_field :night_air_temp, placeholder: "65"%><br>
    </div>
    <div>
      <%= f.number_field :watering_volume_per_day, placeholder: "10"%><br>
      <%= f.number_field :container_size, placeholder: "10"%><br>
      <%= f.number_field :ph, placeholder: "6.6"%><br>
    </div>
    <div>
      <%= f.text_field   :diagnosis, placeholder: "Healthy" %><br>
      <%= f.text_area    :comments, placeholder: "Something else to say?"%><br>
      <%= button_to "Add Health Report", {}, {:class=>"btn btn-primary"} %>
    </div>
  </div>
</div>
<% end %>