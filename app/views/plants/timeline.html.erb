<%= content_for :content_header do%>
  <div style="display:flex; justify-content:space-between">
    <div>
      <%= link_to 'Overview', plant_path(@plant.id), class: "btn btn-primary btn-sm" %> 
      <%= link_to 'Timeline', timeline_plant_path(@plant.id), class: "btn btn-primary btn-sm active" %>
    </div>
    <div style="display:flex">
      <h5 style="margin:10px">Plant: <%= @plant.id %></h5>
      <h5 style="margin:10px"><%= @plant.crop.name %></h5>
    </div>
  </div>
<% end %>
<div class="card" style="padding:10px">
  <div>
    <%= link_to 'New Health Report', new_plant_health_report_path(@plant.id), class: "btn btn-info btn-sm" %>
    <%= link_to 'New Harvest Report', new_plant_harvest_report_path(@plant.id), class: "btn btn-info btn-sm" %>
  </div>
  <div class="card-plain">
    <%= react_component('PlantTimeline', props={healthReports: @plant.health_reports, harvestReports: @plant.harvest_reports}) %>
  </div>
</div>