<div class="card card-timeline">
  <div class="card-header" style="display: flex">
    <h5 class="card-category" style="text-align:center;">Plant Timeline</h5>
    <div style="width: 40%;text-align:center;">
      <h5 class="card-title">Health Reports</h5>
      <%= link_to "View All",
                  plant_health_reports_path(@user, plant_id: @plant.id),
                  class: "btn btn-primary"%>
      <%= link_to "New Report", 
                  new_plant_health_report_path(@user, plant_id:  @plant.id), 
                  class: "btn btn-success" %>
      <div style="display:flex;justify-content:space-around;">
        <div>
          <h6>Total</h6>
          <span><%= @plant.health_reports.length %></span>
        </div>
        <div>
          <h6>Most Recent</h6>
          <% if @plant.health_reports.length > 0 %>
            <span>
              <%= @plant.health_reports.last.created_at.strftime("%b %d") %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
    <div>
      <h5 class="card-title">Harvest Reports</h5>
      <%= link_to "View All",
                    plant_harvest_reports_path(@user, plant_id: @plant.id),
                    class: "btn btn-primary"%>
      <%= link_to "New Report", 
                    new_plant_harvest_report_path(@user, plant_id: @plant.id), 
                    class: "btn btn-danger" %>
      <div style="display: flex; text-align: center">
        <div>
          <h6>Total</h6>
          <span><%= @plant.harvest_reports.length %></span>
        </div>
        <div>
          <h6>Most Recent</h6>
          <% if @plant.harvest_reports.length > 0 %>
            <span>
              <%= @plant.harvest_reports.last.created_at.strftime("%b %d") %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  </div>
  <div class="card-body">
    <ul class="timeline">
      <%= render partial: '/health_reports/health_timeline', 
                 collection: @plant.health_reports %>
      <%= render partial: '/harvest_reports/harvest_timeline', 
                 collection: @plant.harvest_reports %>
    </ul>
  </div>
</div>