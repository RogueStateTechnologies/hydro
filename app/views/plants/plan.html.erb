<%= content_for :content_header do%>
  <div style="display:flex; justify-content:space-between">
    <div>
      <%= link_to 'Overview', plant_path(@plant.id), class: "btn btn-primary btn-sm active" %>
      <%= link_to 'Timeline', timeline_plant_path(@plant.id), class: "btn btn-primary btn-sm" %>
      <%= link_to 'Plan', plan_plant_path(@plant.id), class: "btn btn-primary btn-sm" %>
    </div>
    <div style="display: flex; justify-content: space-around; width: 300px">
      <div>
          <h6><%= @plant.start_date %></h6>
          <span>Start Date</span>
      </div>
      <div>
          <h6>May 10</h6>
          <span>Projected End Date</span>
      </div>
    </div>
  </div>
<% end %>
<div class="card">
    <h5 class="card-title"><%= @plant.plan.name %></h5>
    <span class="card-category"><%= @plant.plan.description %></span><br>
    <span class="card-category"> 
      Duration: <%= @plant.plan.weeks.length %> Weeks
    </span>
</div>
