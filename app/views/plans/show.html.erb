<div class="col-md-6">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title"><%= @plan.name%></h5>
      <span><%= @plan.description %></span>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-4 col-6">
          <div class="nav-tabs-navigation verical-navs">
            <div class="nav-tabs-wrapper">
              <ul class="nav nav-tabs flex-column nav-stacked" role="tablist">
                <%= render  partial: "plan_phase", 
                            collection: Phase.where(plan_id: @plan.id) %>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-8 col-md-7 col-sm-8 col-6">
          <div class="tab-content">
            <%= render  partial: "phase_detail", 
                        collection: Phase.where(plan_id: @plan.id) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>