<div class="col-md-12">
  <div class="card">
    <div class="card-header">
      <h4 class="card-title">GroWise Crops Index</h4>
      <h5 class="card-category">All the crops we currently support</h5>
      <%= link_to "Add Crop", new_crop_path, class: "btn btn-primary btn-sm"%>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead class="text-primary">
            <th class="text-left">
              Name
            </th>
            <th class="text-center">
              Favorites
            </th>
          </thead>
          <tbody>
            <%= render partial: "index_crop", collection: @crops%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
