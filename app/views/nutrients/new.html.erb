<div class="card" style="width:40%;">
  <div class="card-header">
    <h5 class="card-title">Good Plants start with Good Nutrients</h5>
  </div>
  <div class="card-body">
    <%= bootstrap_form_for [@crop, @nutrient] do |f| %>
      <div>
        <%= f.hidden_field :crop_id, value: @crop.id %>
        <%= f.text_field :name, placeholder: "Nutrient" %><br />
        <%= f.text_field :manufacturer, placeholder: "Manufacturer" %><br />
        <%= f.text_field :compound, placeholder: "Compound" %><br />
      </div>
      <%= button_to "Add Nutrient" %>
    <% end %>
  </div>
</div>